<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_upload_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundshape_yellow_bg"
            android:text="@string/call_owner"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialogview_area" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/owner_details"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dialogview_home_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/tv_dialogview_owner_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialogview_home_name"
            app:layout_constraintStart_toStartOf="@+id/tv_dialogview_home_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialogview_home_name" />

        <TextView
            android:id="@+id/tv_dialogview_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialogview_owner_name"
            app:layout_constraintStart_toStartOf="@+id/tv_dialogview_owner_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialogview_owner_name" />

        <TextView
            android:id="@+id/tv_dialogview_road"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialogview_mobile"
            app:layout_constraintStart_toStartOf="@+id/tv_dialogview_mobile"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialogview_mobile" />

        <TextView
            android:id="@+id/tv_dialogview_holding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialogview_road"
            app:layout_constraintStart_toStartOf="@+id/tv_dialogview_road"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialogview_road" />

        <TextView
            android:id="@+id/tv_dialogview_profession"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialogview_holding"
            app:layout_constraintStart_toStartOf="@+id/tv_dialogview_holding"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialogview_holding" />

        <TextView
            android:id="@+id/tv_dialogview_home_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialogview_profession"
            app:layout_constraintStart_toStartOf="@+id/tv_dialogview_profession"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialogview_profession" />

        <TextView
            android:id="@+id/tv_dialogview_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_dialogview_home_address"
            app:layout_constraintStart_toStartOf="@+id/tv_dialogview_home_address"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialogview_home_address" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>