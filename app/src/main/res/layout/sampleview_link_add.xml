<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_youtube_link"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorGreen"
        android:ems="10"
        android:gravity="start"
        android:hint="past your link here..."
        android:inputType="textMultiLine|textPersonName"
        android:padding="10dp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:textAlignment="viewStart"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add Youtube Videos"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_sampleview_link_cancel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/roundshape_yellow_bg"
        android:text="@android:string/cancel"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_sampleview_link_add"
        app:layout_constraintStart_toStartOf="@+id/et_youtube_link"
        app:layout_constraintTop_toTopOf="@+id/button_sampleview_link_add" />

    <Button
        android:id="@+id/button_sampleview_link_add"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/roundshape_yellow_bg"
        android:text="@string/add"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_youtube_link"
        app:layout_constraintTop_toBottomOf="@+id/et_youtube_link" />
</androidx.constraintlayout.widget.ConstraintLayout>